        android:textColor="#151414"
        android:textSize="15sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dove Men+Care Hydration Balance Body and Face
         Wash is formulated to address the specific needs of menâ€™s skin.
          It locks in your skin's natural moisture, leaving it hydrated and balanced"
        android:textColor="#151414" />

    <Button
    android:id="@+id/cart1"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="130sp"
    android:paddingLeft="20sp"
    android:layout_marginTop="20dp"
    android:text="Add to cart" />
    <Button
        android:id="@+id/back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20sp"
        android:paddingLeft="20sp"
        android:layout_marginTop="20dp"
        android:text="Back" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>