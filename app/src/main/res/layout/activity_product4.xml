<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".product.ProductActivity1">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


        <ImageView
        android:id="@+id/imageView6"
        android:layout_width="match_parent"
        android:layout_height="380dp"
        app:srcCompat="@drawable/img5" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="27sp"
        android:layout_marginBottom="38sp"
        android:accessibilityHeading="true"
        android:text="Loreal Men's Expert          Price: $9"
        android:textColor="#ED1414"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="124sp"
        android:layout_height="17sp"
        android:layout_marginBottom="20sp"
        android:text="Description"
        android:textColor="#151414"
        android:textSize="15sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="FOR THE HAIR and BEARD: Cleanses and conditions, leaves scalp feeling comfortable. Washes away loose beard flakes, residue and odours. Leaves beard softer
FOR THE SKIN: Cleanses, comforts and fortifies FREE FROM: Soap, Parabens and Colourants. BarberClub products are enriched with Cedarwood Essential Oil in order to strengthen and soften facial hair whilst nourishing the skin"
        android:textColor="#151414" />

    <Button
        android:id="@+id/cart4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="130sp"
        android:layout_marginTop="20dp"
        android:paddingLeft="20sp"
        android:text="Add to cart" />

    <Button
        android:id="@+id/back4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20sp"
        android:layout_marginTop="20dp"
        android:paddingLeft="20sp"
        android:text="Back" />
        </LinearLayout>
    </ScrollView>


</LinearLayout>