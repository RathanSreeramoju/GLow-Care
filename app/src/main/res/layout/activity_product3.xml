<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ProductActivity1">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="match_parent"
                android:layout_height="380dp"

                app:srcCompat="@drawable/img4" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="27sp"
                android:layout_marginBottom="38sp"
                android:accessibilityHeading="true"
                android:text="Mythic Oil                      Price: $5"
                android:textColor="#ED1414"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="124sp"
                android:layout_height="17sp"
                android:layout_marginBottom="20sp"
                android:text="Description"
                android:textColor="#151414"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Envelop locks in a veil of nourishment with L'Oréal Professionnel Mythic Oil Original Oil, a luxurious treatment that adds softness and shine. Providing heat protection up to 230°C in order to prevent damage and dehydration, the L'Oréal Mythic Oil helps to detangle strands after washing and smoothens the cuticle to combat frizz"
                android:textColor="#151414" />

            <Button
                android:id="@+id/cart3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="130sp"
                android:paddingLeft="20sp"
                android:layout_marginTop="20dp"
                android:text="Add to cart" />
            <Button
                android:id="@+id/back3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20sp"
                android:paddingLeft="20sp"
                android:layout_marginTop="20dp"
                android:text="Back" />
        </LinearLayout>
    </ScrollView>


</LinearLayout>